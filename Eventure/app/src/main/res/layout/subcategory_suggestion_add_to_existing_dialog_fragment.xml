<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.admin.dialogs.SubcategorySuggestionEditDialogFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sublayout_border"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/merienda_font"
                android:textColor="@color/blue"
                android:text="@string/select_subcategory"
                android:textSize="16sp"
                android:shadowRadius="4"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="4"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/subcategory_spinner"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/sublayout_border"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="@string/cancel"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/merienda_font"
                    android:textColor="@color/light_gray"
                    android:background="@drawable/button_secondary" />

                <Button
                    android:id="@+id/add_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="@string/add"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/merienda_font"
                    android:textColor="@color/light_gray"
                    android:background="@drawable/button_primary" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>