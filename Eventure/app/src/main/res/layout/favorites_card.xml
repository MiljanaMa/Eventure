<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_border"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:id="@+id/favorites_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_marginBottom="0dp">

                <TextView
                    android:id="@+id/fav_name"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_marginStart="5dp"
                    android:text="Name"
                    android:shadowRadius="4"
                    android:shadowColor="@color/white"
                    android:shadowDx="0"
                    android:shadowDy="4" />

                <TextView
                    android:id="@+id/fav_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sublayout_border"
                    android:backgroundTint="@color/light_gray"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/merienda_font"
                    android:textAlignment="center"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textSize="15sp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="5dp"
                        android:text="Type: "
                        android:shadowRadius="4"
                        android:shadowColor="@color/white"
                        android:shadowDx="0"
                        android:shadowDy="4"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/fav_type"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textSize="15sp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="5dp"
                        android:maxLines="1"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/removeFromFavorites"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sublayout_border"
                        android:text="Remove"
                        android:fontFamily="@font/merienda_font"
                        android:backgroundTint="@color/orange"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
