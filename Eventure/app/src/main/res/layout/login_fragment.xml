<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@color/white"
    tools:context=".fragments.common.LoginFragment"
    android:id="@+id/login_container">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/login_background"/>

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/logo"
            android:layout_marginTop = "30dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merienda_font"
            android:textColor="@color/blue"
            android:text="@string/welcome"
            android:textSize="32sp"
            android:textAlignment="center"
            android:shadowRadius="4"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/layout_border"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merienda_font"
                android:textColor="@color/blue"
                android:text="@string/login"
                android:textSize="32sp"
                android:shadowRadius="4"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="4"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/email_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="@string/email_placeholder"
                android:fontFamily="@font/merienda_font"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:maxLines="1"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="@string/password_placeholder"
                android:fontFamily="@font/merienda_font"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:maxLines="1"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/login"
                android:textSize="16sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/merienda_font"
                android:textColor="@color/light_gray"
                android:background="@drawable/button_primary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/layout_border"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/dont_have_account_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merienda_font"
                android:textColor="@color/blue"
                android:text="@string/dont_have_account"
                android:textSize="14sp"
                android:shadowRadius="4"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="4"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/register_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="15dp">

                    <Button
                        android:id="@+id/register_organizer_button"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:text="@string/organizer"
                        android:textSize="14sp"
                        android:fontFamily="@font/merienda_font"
                        android:textColor="@color/light_gray"
                        android:background="@drawable/button_primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="15dp">

                    <Button
                        android:id="@+id/register_owner_button"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:text="@string/proveder"
                        android:textSize="14sp"
                        android:fontFamily="@font/merienda_font"
                        android:textColor="@color/light_gray"
                        android:background="@drawable/button_primary" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>